{
  "name": "trade-tycoon-monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "start": "npm run build && npm run start --workspace=apps/client",
    "server": "npm run dev --workspace=apps/server",
    "web": "npm run web --workspace=apps/client",
    "build:game-logic": "npm run build --workspace=packages/game-logic",
    "build": "npm run build --workspaces --if-present",
    "vercel-build": "npm run vercel-build --workspace=apps/client",
    "export": "npm run vercel-build --workspace=apps/client",
    "test": "npm test --workspaces --if-present",
    "lint": "npm run lint --workspace=apps/client",
    "lint:md": "markdownlint '**/*.md' --ignore node_modules",
    "prepare": "husky"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "markdownlint-cli": "^0.47.0",
    "prettier": "^3.8.0",
    "typescript": "^5.9.2"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,json,css,scss,md}": "prettier --write"
  },
  "overrides": {
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-native": "0.81.5",
    "react-native-gesture-handler": "~2.28.0",
    "react-native-reanimated": "~4.1.1",
    "react-native-screens": "~4.16.0",
    "react-native-worklets": "0.5.1",
    "@types/react": "~19.1.10"
  }
}
