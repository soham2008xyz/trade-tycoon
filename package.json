{
  "name": "trade-tycoon-monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "start": "npm run start --workspace=apps/client",
    "server": "npm run dev --workspace=apps/server",
    "build": "npm run build --workspace=packages/game-logic",
    "test": "npm test --workspaces --if-present",
    "lint": "npm run lint --workspace=apps/client",
    "lint:md": "markdownlint '**/*.md' --ignore node_modules",
    "prepare": "husky"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "markdownlint-cli": "^0.47.0",
    "prettier": "^3.7.4"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,json,css,scss,md}": "prettier --write"
  }
}
